<% layout('layouts/boilerplate')%>

<h1>All Patients</h1>
<div id='map' style='width: 100%; height: 300px;'></div>
<div class="card-group">
    <% for (let patient of patients){%>
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title"><a class="card-link" href="/<%=patient.id%>/records"><%= patient.username%></a></h5>
            <p class="card-text">Email: <a href="#" class="card-link"><%= patient.email %></a></p>
            <p class="card-text">Adress: <%= patient.adress %></p>
            <p class="card-text"><small class="text-muted"><%= patient.role %></small></p>
          </div>
        </div>
    <% }%>
</div>

<div>
    <a class="btn btn-primary" href="/profile">Back to profile</a>
</div>

<script>
    const users = <%- JSON.stringify(patients) %>;
</script>

<script src="/javascripts/showPageMap.js"></script>
